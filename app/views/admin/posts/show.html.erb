<div class="row">
	<div class="col">
		<h3><%= @post.title %></h3>
	</div>
	<div class="col align-self-end text-right">
		<% if @post.published == true then %>
			Published on <%= @post.published_at.strftime("%d/%m/%Y") %>
		<% else %>
			Post not yet published
		<% end %>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<%= simple_format(@post.content) %>
	</div>
</div>

<%= link_to 'Edit', edit_admin_post_path(@post) %> |
<%= link_to 'Back', :back %>
