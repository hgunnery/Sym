<%= form_with(model: [:admin, @supporter_level]) do |form| %>
  <% if @supporter_level.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@supporter_level.errors.count, "error") %> prohibited this supporter_level from being saved:</h2>

      <ul>
        <% @supporter_level.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
	<div class="col-md-3">
		<div class="field form-group">
	    <%= form.label :name %>
	    <%= form.text_field :name, class: "form-control" %>
	  </div>
	</div>
</div>
<div class="row">
	<div class="col-md-3">
		<div class="field form-group">
	    <%= form.label :amount %>
	    <%= form.text_field :amount, class: "form-control" %>
	  </div>
	</div>
</div>
<div class="row">
	<div class="col-md-6">
		<div class="field form-group">
	    <%= form.label :description %>
	    <%= form.text_area :description, class: "form-control" %>
	  </div>
	</div>
</div>
<div class="row">
	<div class="col-md-6">
		<div class="field form-group">
	    <%= form.label :stripe_plan_name %>
	    <%= form.text_field :stripe_plan_name, class: "form-control" %>
			<small id="stripe_plan_nameHelpBlock" class="form-text text-muted">
			  This is the unique identifier generated in the stripe dashboard, just copy and past it from there.
			</small>
	  </div>
	</div>
</div>
<div class="row">
	<div class="col-md-3">
		<div class="actions">
	    <%= form.submit class: "btn btn-primary" %>
	  </div>
	</div>
</div>



<% end %>
