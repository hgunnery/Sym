<br>
<div class="row">
	<div class="col-sm-3">
		<h2><%= @suggestion.name %></h2>
	</div>
	<div class="col-sm-3">
		This suggesiton has <%= @suggestion.vote_count %> <%= (@suggestion.vote_count) == 1 ? 'Vote' : 'Votes'%>
	</div>
</div>

<br>
<% if @suggestion.completed == true then %>
<div class="row">
	<div class="col-sm-6">
		<h3>This suggestion has been completed, you can now enjoy this content!</h3>
	</div>
</div>
<% end %>
<div class="row">
	<div class="col-sm-6">
		<% if @suggestion.admin_suggested == true then %>
			This suggestion was made by <%= @suggestion.user.full_name %>
		<% else %>
			This is a user created suggestion
		<% end %>
	</div>
</div>

<br>

<div class="row">
	<div class="col-sm-12">
		<% if @suggestion.banned == true %>
				<h4>This suggesiton has been banned for the following reasons:</h4>
				<br>
			  <%= simple_format(@suggestion.banned_reason) %>
				<br>
		<% end %>
	</div>
</div>

<div class="row">
	<div class="col-sm-12">
		<%= simple_format(@suggestion.description) %>
	</div>
</div>


<% if @suggestion.user = current_user then %>
	<%= link_to 'Edit', edit_suggestion_path(@suggestion) %> |
<% end %>
<%= link_to 'Back', :back %>
