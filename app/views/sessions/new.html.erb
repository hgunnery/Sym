<h2>Log in</h2>

<%= form_tag sessions_path do %>
	<div class="row">
		<div class="col-md-3">
			<div class="field form-group">
		    <%= label_tag :email %>
		    <%= text_field_tag :email, params[:email], class: "form-control" %>
		  </div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-3">
			<div class="field form-group">
		    <%= label_tag :password %>
		    <%= password_field_tag :password, nil, class: "form-control" %>
		  </div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-3">
			<div class="field">
		    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
		    <%= label_tag :remember_me %>
		  </div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-3">
			<p><%= link_to "Forgotten password?", new_password_reset_path %></p>
		</div>
	</div>
	<div class="row">
		<div class="col-md-3">
			<div class="actions"><%= submit_tag "Log in", class: "btn btn-primary" %></div>
		</div>
	</div>
<% end %>
